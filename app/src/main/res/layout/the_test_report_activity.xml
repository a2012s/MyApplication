<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_test_report">

    <View
        android:layout_width="223dp"
        android:layout_height="201dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/test_report" />

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="本次考试成绩"
            android:textColor="#FF888888"
            android:textSize="17sp" />

        <View
            android:id="@+id/circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_circle" />


        <TextView
            android:id="@+id/tv_the_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="96"
            android:textColor="#FFD45113"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_the_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_the_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="你的成绩"
            android:textColor="#FFB2B2B2"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_word_nums"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="50"
            android:textColor="#FFD45113"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_word_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/circle"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="330'50''"
            android:textColor="#FFD45113"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_word_nums_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word_nums"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="单词个数"
            android:textColor="#FFB2B2B2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_word_time_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_word_time"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="作答时间"
            android:textColor="#FFB2B2B2"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_word_time_text"
            android:layout_marginTop="5dp"
            android:background="#FFE5E5E5" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_line"
            android:gravity="center"
            android:text="排行榜"
            android:textColor="#FF353535"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_line"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="#FF353535"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_line_1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/view_line"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#FFE5E5E5" />

    </RelativeLayout>


    <Button
        android:id="@+id/bt_sure"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/rl_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FF353535"
        android:textSize="17sp" />


    <ImageView
        android:id="@+id/iv_shart_weixin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="70dp"
        android:scaleType="fitXY"
        android:src="@mipmap/share_weixin" />


    <ImageView
        android:id="@+id/iv_shart_circle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="70dp"
        android:scaleType="fitXY"
        android:src="@mipmap/share_circle" />

    <View
        android:layout_width="95dp"
        android:layout_height="1dp"
        android:layout_above="@+id/iv_shart_circle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="50dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <View
        android:layout_width="95dp"
        android:layout_height="1dp"
        android:layout_above="@+id/iv_shart_circle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/iv_shart_circle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal"
        android:text="   分享到   "
        android:textColor="@android:color/white"
        android:textSize="13sp" />


</RelativeLayout>